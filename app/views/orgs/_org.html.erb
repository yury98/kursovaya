<%= form_for @org do |f|%>
  <div class="form-horizontal">
    <div class="form-group col-sm-8">
      <%= f.label :name, 'Название', class: 'col-sm-3 control-label'%>
      <div class="col-sm-9">
        <%= f.text_field :name, class: 'form-control',  placeholder: 'Название', required: true %>
      </div>
    </div>
    <div class="form-group col-sm-4">
      <%= f.label :code, 'Код', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :code, class: 'form-control',  placeholder: 'Код', required: true %>
      </div>
    </div>
    <h3 class="col-sm-offset-2">Основное</h3>
    <div class="form-group col-sm-6">
      <%= f.label :person, 'Юр./Физ. лицо', class: 'col-sm-4 control-label'%>
      <div class="col-sm-8">
        <%= f.select :person, [['Юр. лицо', 'Юр. лицо'], ['Физ. лицо', 'Физ. лицо']], {}, {class: 'form-control'}%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :typ, 'Тип организации', class: 'col-sm-2 control-label'%>
      <div class="col-sm-4">
        <%= f.select :typ, [['Бюджетная', 'Бюджетная'], ['Коммерческая', 'Коммерческая']], {}, {class: 'form-control'}%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :full_name, 'Полное название', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :full_name, class: 'form-control',  placeholder: 'Полное название', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :small_name, 'Сокращенное название', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :small_name, class: 'form-control',  placeholder: 'Сокращенное название', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :usedge, 'Использовать', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.select :usedge, [['Сокращенное название', 'Сокращенное название'], ['Полное название', 'Полное название']], {}, {class: 'form-control'}%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <%= f.check_box :foreign, {}, true, false %>
          <%= f.label :foreign, 'Отделение иностранной организации'%>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :account, 'Основной банковский счет', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :account, class: 'form-control',  placeholder: 'Счет', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :u_address, 'Юридический адрес', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :u_address, class: 'form-control',  placeholder: 'Юридический адрес', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :f_address, 'Фактический адрес', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :f_address, class: 'form-control',  placeholder: 'Фактический адрес', required: true %>
      </div>
    </div>
    <div class="form-group col-sm-4">
      <%= f.label :square, 'Площадь', class: 'col-sm-7 control-label'%>
      <div class="input-group col-sm-5">
        <%= f.text_field :square, class: 'form-control',  placeholder: 'Площадь', required: true %>
        <span class="input-group-addon">м<sup>2</sup></span>
      </div>
    </div>
    <div class="form-group col-sm-4">
      <%= f.label :people, 'Кол-во сотрудников', class: 'col-sm-6 control-label'%>
      <div class="col-sm-6">
        <%= f.text_field :people, class: 'form-control',  placeholder: 'Сотрудников', required: true %>
      </div>
    </div>
    <div class="form-group col-sm-5">
      <%= f.label :space_fp, 'Кол-во посадочных мест', class: 'col-sm-6 control-label'%>
      <div class="col-sm-6">
        <%= f.text_field :space_fp, class: 'form-control',  placeholder: 'Мест', required: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-ok"></span> Сохранить</button>
      </div>
    </div>
  </div>
<% end %>