<div class="list-group col-md-2 person-md">
  <a href="main" class="list-group-item"><span class="glyphicon glyphicon-home"></span>  Организации</a>
  <a href="new" class="list-group-item"><span class="glyphicon glyphicon-plus"></span>  Добавить</a>
  <a href="view" class="list-group-item"><span class="glyphicon glyphicon-pencil"></span>  Просмотр и редактирование</a>
  <a href="dump" class="list-group-item"><span class="glyphicon glyphicon-trash"></span>  Удаленные</a>
</div>
<div class="col-md-10">
  <div class="form-horizontal">
    <div class="form-group col-sm-8">
      <%= label :name, 'Название', class: 'col-sm-3 control-label'%>
      <div class="col-sm-9">
        <%= label :name, @cont.name, class: 'control-label'%>
      </div>
    </div>
    <div class="form-group col-sm-4">
      <%= label :code, 'Код', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= label :code, @cont.code, class: 'control-label'%>
      </div>
    </div>
    <h3 class="col-sm-offset-2">Общие</h3>
    <div class="form-group">
      <%= label :typ, 'Юр./Физ. лицо', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= label :typ, @cont.typ, class: 'control-label'%>
      </div>
    </div>
    <div class="form-group">
      <%= label :group, 'Группа контрагентов', class: 'col-sm-2 control-label'%>
      <div class="col-sm-4">
        <%= label :group, @cont.group, class: 'control-label'%>
      </div>
    </div>
    <div class="form-group">
      <%= label :full_name, 'Полное название', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= label :full_name, @cont.full_name, class: 'control-label'%>
      </div>
    </div>
    <div class="form-group">
      <%= label :inn, 'ИНН', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= label :inn, @cont.inn, class: 'control-label'%>
      </div>
    </div>
    <div class="form-group">
      <%= label :kpp, 'КПП', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= label :kpp, @cont.kpp, class: 'control-label'%>
      </div>
    </div>
    <div class="form-group">
      <%= label :code_okpo, 'Код по ОКПО', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= label :code_okpo, @cont.code_okpo, class: 'control-label'%>
      </div>
    </div>
    <h3 class="col-sm-offset-2">Адреса и телефоны</h3>
    <div class="form-group">
      <%= label :u_address, 'Юридический адрес', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= label :u_address, @cont.u_address, class: 'control-label'%>
      </div>
    </div>
    <div class="form-group">
      <%= label :f_address, 'Фактический адрес', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= label :f_address, @cont.f_address, class: 'control-label'%>
      </div>
    </div>
    <div class="form-group">
      <%= label :tel, 'Телефон', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= label :tel, @cont.tel, class: 'control-label'%>
      </div>
    </div>
    <div class="form-group">
      <%= label :other, 'Другое', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= label :other, @cont.other, class: 'control-label'%>
      </div>
    </div>
    <h3 class="col-sm-offset-2">Банковский счет</h3>
    <div class="form-group">
      <%= label :bank_code, 'Код', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= label :bank_code, @cont.bank_code, class: 'control-label'%>
      </div>
    </div>
    <div class="form-group">
      <%= label :code_name, 'Наименование', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= label :code_name, @cont.code_name, class: 'control-label'%>
      </div>
    </div>
    <div class="form-group">
      <%= label :bank_name, 'Банк', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= label :bank_name, @cont.bank_name, class: 'control-label'%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to contragents_edit_path(id: @cont), class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-cog"></span>
          Редактировать
        <% end %>
        <%= link_to @cont, method: :delete, data: { confirm: 'Вы уверены?'}, class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-trash"></span>
          Удалить
        <% end %>
        <a href="#" class="btn btn-default"><span class="glyphicon glyphicon-envelope"></span> Отправить на почту</a>
      </div>
    </div>
  </div>
</div>
