<h3 class="col-sm-offset-2">Введите информацию о организации, чтобы использовать её в счетах по умолчанию</h3>
<%= form_for @info, url: 'new', method: 'post' do |f|%>
  <div class="form-horizontal">
    <div class="form-group">
      <%= f.label :post, 'Поставщик', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :post, class: 'form-control',  placeholder: 'Поставщик', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :address, 'Адрес', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :address, class: 'form-control',  placeholder: 'Адрес', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :tel, 'Телефон', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :tel, class: 'form-control',  placeholder: 'Телефон', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :destination, 'Получатель платежа', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :destination, class: 'form-control',  placeholder: 'Получатель платежа', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :trans, 'Транзитный счет', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :trans, class: 'form-control',  placeholder: 'Транзитный счет', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :fil, 'В', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :fil, class: 'form-control',  placeholder: 'В ФИЛИАЛ...', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :bik, 'БИК', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :bik, class: 'form-control',  placeholder: 'БИК', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :ksch, 'к/сч', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :ksch, class: 'form-control',  placeholder: 'к/сч', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :innkpp, 'ИНН/КПП', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :innkpp, class: 'form-control',  placeholder: 'ИНН/КПП', required: true %>
      </div>
    </div>
    <hr/>
    <div class="form-group">
      <%= f.label :gruz, 'Грузоотправитель', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :gruz, class: 'form-control',  placeholder: 'Грузоотправитель', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :addressg, 'Адрес', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :addressg, class: 'form-control',  placeholder: 'Адрес', required: true %>
      </div>
    </div>
    <hr/>
    <div class="form-group">
      <%= f.label :dir, 'Директор', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :dir, class: 'form-control',  placeholder: 'Директор', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :main_buh, 'Главный бухгалтер', class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :main_buh, class: 'form-control',  placeholder: 'Главный бухгалтер', required: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-ok"></span> Сохранить</button>
      </div>
    </div>
  </div>
<% end %>