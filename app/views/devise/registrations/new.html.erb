<h2 class="col-sm-offset-2">Регистрация нового пользователя</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-horizontal">
    <div class="form-group">
      <div class="field">
        <%= f.label :email, 'Email', class: 'col-sm-2 control-label' %><br />
        <div class="col-sm-10" >
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
  <div class="field">
    <%= f.label :password, 'Пароль', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10" >
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>
    </div>

      <div class="form-group">
  <div class="field">
    <%= f.label :password_confirmation, 'Повторите пароль', class: 'col-sm-2 control-label' %><br />
    <div class="col-sm-10" >
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>
      </div>

        <div class="form-group">
  <div class="actions">
    <%= f.submit "Регистрация", class: "col-sm-offset-2 btn btn-default" %>
  </div>
        </div>
    </div>
<% end %>

<%= render "devise/shared/links" %>
