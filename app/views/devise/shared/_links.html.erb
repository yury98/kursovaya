<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Забыли пароль?", new_password_path(resource_name), class: "col-sm-offset-2 btn btn-default" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Вход с #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "col-sm-offset-2 btn btn-default" %><br />
  <% end -%>
<% end -%>
