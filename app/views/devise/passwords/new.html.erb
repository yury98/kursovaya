<h2 class="col-sm-offset-2">Забыли пароль?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-horizontal">
    <div class="form-group">
        <%= f.label :email, 'Введите ваш Email для восстановления доступа', class: 'col-sm-2 control-label' %><br />
        <div class="col-sm-10" >
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
      <div class="actions">
        <%= f.submit "Выслать инструкции на почту", class: "col-sm-offset-2 btn btn-default" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
